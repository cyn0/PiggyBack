<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dateTimeTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#33B5E5"
        android:padding="4dp"
        android:text="Date and time"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Trip start date"
            android:textSize="@dimen/texts"
             />

         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold" />

        <Button
            android:id="@+id/setStartDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Start" >
   	  	</Button>
    </LinearLayout>
    
     
   	  
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Start time"
            android:textSize="@dimen/texts"
             />

         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold" />
         <Button
            android:id="@+id/setStartTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Start" >
   	  	</Button>
		
	   
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/returnTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Return time"
            android:textSize="@dimen/texts"
             />

         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold" />
		 <Button
	       android:id="@+id/setReturnTime"
	       android:layout_width="150dp"
	       android:layout_height="wrap_content"
	       android:background="@drawable/border"
	       android:text="Return " >
	   	  </Button>
        
    </LinearLayout>

   <TextView
        android:id="@+id/priceTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#33B5E5"
        android:padding="4dp"
        android:text="Pricing"
        android:textColor="#ffffff"
        android:textStyle="bold" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:paddingTop="2dp"
        >
		<CheckBox
	       android:id="@+id/chargeCheckbox"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:checked="true"
	       android:text="Free of charge" />

		<EditText
		    android:id="@+id/chargeEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:visibility="invisible"
		    android:ems="10" >

		</EditText>
        
    </LinearLayout>
   

   
        
   <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="41dp"
        android:background="#33B5E5"
        android:text="Next" />

</LinearLayout>
